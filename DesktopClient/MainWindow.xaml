        <Button Content="Send" HorizontalAlignment="Left" Margin="226,72,0,0" VerticalAlignment="Top" Height="66" Width="140" Click="Button_Click" FontSize="20"/>
        <TextBox x:Name="SendMessage" HorizontalAlignment="Left" Margin="495,91,0,0" TextWrapping="Wrap" Text="Empty Yet" VerticalAlignment="Top" Width="146" Height="47" TextChanged="TextBox_TextChanged"/>
        <Label Content="Received Message : " HorizontalAlignment="Left" Margin="226,182,0,0" VerticalAlignment="Top" Height="55" Width="196" FontSize="20"/>
        <Label x:Name="StatusLabel" Content="IsConnected" HorizontalAlignment="Left" Margin="422,27,0,0" VerticalAlignment="Top" Height="33" Width="174"/>
        <Label x:Name="ReceivedMessage" Content="Label" HorizontalAlignment="Left" Margin="495,0,0,0" VerticalAlignment="Center" Height="73" Width="178"/>

    </Grid>
</Window>
